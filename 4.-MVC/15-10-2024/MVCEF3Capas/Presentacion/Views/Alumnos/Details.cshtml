        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            <span id="id">@Html.DisplayFor(model => model.id)</span>
        </dd>
        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.primerApellido)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.primerApellido)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.segundoApellido)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.segundoApellido)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.correo)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.correo)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.telefono)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefono)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.fechaNacimiento)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.curp)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.curp)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.sueldo)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sueldo)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.Estados)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estados.nombre)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.EstatusAlumnos)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstatusAlumnos.Nombre)
        </dd>

    </dl>
</div>

<input id="btnCalcularIMSS" class="btn btn-primary" type="button" value="Calcular IMSS" onclick="CalcularIMSS()" />
<input id="btnCalcularISR" class="btn btn-primary" type="button" value="Calcular ISR" onclick="CalcularISR()" />

<p>
    @Html.ActionLink("Regresar a la lista", "Index")
</p>

<script type="text/javascript">

    function CalcularIMSS() {
     $("#tituloModalISRvsIMSS").text("Aportaciones IMSS");
     let id = $("#id").text();
     var urlws = "@Url.Action("_AportacionesIMSS","Alumnos")" + "/" + id;
     Calcular(urlws, CalculoISRvsIMSS);
    }
    function CalcularISR() {
    $("#tituloModalISRvsIMSS").text("Cálculo ISR");
    let id = $("#id").text();
    var urlws = "@Url.Action("_TablaISR","Alumnos")" + "/" + id;
    Calcular(urlws, CalculoISRvsIMSS);
    }

    function CalculoISRvsIMSS(ISRvsIMSS) {
        
        $("#cuerpoModalIMSS").html(ISRvsIMSS);
        $("#modalISRvsIMSS").modal('show');

    }

</script>

<div class="modal" id="modalISRvsIMSS" tabindex="1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="tituloModalISRvsIMSS" class="modal-title">Cálculo del IMSS</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="cuerpoModalIMSS">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
