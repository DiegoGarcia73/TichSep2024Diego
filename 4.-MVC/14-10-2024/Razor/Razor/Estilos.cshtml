@using RazorMVC.Models
@model IEnumerable<Alumno>
@{
    ViewBag.Title = "Estilos";
}
<style type="text/css">
    .ActivoSpan {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background: #5cb85c;
    }

    .InactivoSpan {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background: #ff0000;
    }
</style>

<h2>Estilos</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.id)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.idEstado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.id)
    </td>
    <td>
        @Html.DisplayFor(m => item.nombre)
    </td>
    <td>
        @Html.DisplayFor(m => item.idEstado)
    </td>
    <td>
        @if (item.activo)
        {
            <div class="ActivoSpan" title="Activo"></div>
        }
        else
        {
            <div class="InactivoSpan" title="Inactivo"></div>
        }
    </td>
</tr>
    }
</table>