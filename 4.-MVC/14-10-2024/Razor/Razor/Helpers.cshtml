@using RazorMVC.Models;
@model Alumno
@{
    ViewBag.Title = "Helpers";
}

<h2>Helpers</h2>
@using (Html.BeginForm())
{
    <h4>Alumnos</h4>
    <hr />
    <div class="form-horizontal">
        <p>Helpers @@Html.Label @@Html.LabelFor</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <p>Helpers @@Html.Display @@Html.DisplayFor</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Display("nombre")
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(m => m.nombre)
            </div>
        </div>
        <p>Helpers @@Html.TextBox @@Html.TextBoxFor String</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.TextBox("nombre", "Valor Inicial", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.nombre, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <p>Helpers @@Html.TextBox @@Html.TextBoxFor Entero</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.TextBox("id", 7, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.id, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <p>Helpers @@Html.Editor @@Html.EditorFor String</p>
        <p>El Editor a diferencia del TextBox el input lo crea de acuerdo con el tipo de dato que indica el modelo</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Editor("nombre", "Valor Inicial",new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <p>Helpers @@Html.Editor @@Html.EditorFor Entero</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Editor("id", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(m => m.id, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <p>Helpers @@Html.CheckBox @@Html.CheckBoxFor Entero</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.CheckBox("activo")
            </div>
            <div class="col-md-2">
                @Html.CheckBoxFor(m => m.activo)
            </div>
        </div>
        <p>Helpers @@Html.RadioButton @@Html.RadioButtonFor</p>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("Prospecto")
                @Html.RadioButton("nombre", "1")
                @Html.Label("En Capacitación")
                @Html.RadioButton("nombre", "2")
                @Html.Label("En Inserción")
                @Html.RadioButton("nombre", "3")
            </div>
            <div class="col-md-offset-2 col-md-2">
                @Html.Label("Prospecto")
                @Html.RadioButtonFor(m => m.nombre, "1")
                @Html.Label("En Capacitación")
                @Html.RadioButtonFor(m => m.nombre, "2")
                @Html.Label("En Inserción")
                @Html.RadioButtonFor(m => m.nombre, "3")
            </div>
        </div>
        <p>Helpers @@Html.DropDownList - Instanciando SelectList</p>
        <div class="form-group">
            @Html.LabelFor(model => model.idEstado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Estado", new SelectList(ViewBag.Estado, "id", "nombre"), new { @class = "form-control" })
            </div>
        </div>
        <p>Helpers @@Html.DropDownList - SelectList incluido en el ViewBag</p>
        <div class="form-group">
            @Html.LabelFor(model => model.idEstado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idEstado", null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
        <p>Helpers @@Html.DropDownList - SelectList incluido en el ViewData</p>
        <div class="form-group">
            @Html.LabelFor(model => model.idEstatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idEstatus", new SelectList(((IEnumerable<RazorMVC.Models.Estatus>)ViewData["Estatus"]).ToList(), "id", "nombre"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idEstatus, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <p>Helpers @@Html.ActionLink</p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                @Html.ActionLink("Regresar a Inicio", "Index","Razor",null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>

    </div>
}
